   "source": [
    "import numpy as np\n",
    "import scipy.linalg\n",
    "\n",
    "q = 6\n",
    "theta=1\n",
    "Q = np.arange(q, dtype=np.float64)\n",
    "R = (2*Q + 1)[:, None] / theta\n",
    "j, i = np.meshgrid(Q, Q)\n",
    "\n",
    "A = np.where(i < j, -1, (-1.)**(i-j+1)) * R\n",
    "Ad = scipy.linalg.expm(A*0.01)"
   ]
  },
